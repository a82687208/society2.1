<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/cstLyt_login_mainLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:baseActivity="com.gdptc.superbook.ui.activity.LoginActivity">

    <ImageView
        android:id="@+id/circleImageView"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_marginBottom="8dp"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:layout_marginTop="8dp"
        android:src="@mipmap/ic_launcher"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintHorizontal_bias="0.503"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.16000003" />

    <EditText
        android:id="@+id/edtTxt_login_phone"
        android:theme="@style/LoginEdTxtTheme"
        android:layout_width="@dimen/edtTxt_register_width"
        android:layout_height="@dimen/edtTxt_register_height"
        android:layout_marginLeft="0dp"
        android:layout_marginRight="0dp"
        android:layout_marginTop="63dp"
        android:background="@drawable/edt_login_up_shape"
        android:ems="10"
        android:hint="请输入手机号"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/circleImageView" />

    <View
        android:layout_width="0dp"
        android:layout_height="1px"
        android:id="@+id/view_login_line"
        app:layout_constraintTop_toBottomOf="@+id/edtTxt_login_phone"
        android:layout_marginLeft="0dp"
        app:layout_constraintLeft_toLeftOf="@+id/edtTxt_login_phone"
        android:layout_marginRight="0dp"
        app:layout_constraintRight_toRightOf="@+id/edtTxt_login_phone" />

    <EditText
        android:id="@+id/edtTxt_login_psw"
        android:theme="@style/LoginEdTxtTheme"
        android:paddingRight="70dp"
        android:layout_width="@dimen/edtTxt_register_width"
        android:layout_height="@dimen/edtTxt_register_height"
        android:background="@drawable/edt_login_down_shape"
        android:ems="10"
        android:inputType="textPassword"
        android:hint="请输入密码"
        android:layout_marginTop="0dp"
        app:layout_constraintTop_toBottomOf="@+id/view_login_line"
        android:layout_marginLeft="0dp"
        app:layout_constraintLeft_toLeftOf="@+id/edtTxt_login_phone"
        android:layout_marginRight="0dp"
        app:layout_constraintRight_toRightOf="@+id/edtTxt_login_phone" />

    <Button
        android:id="@+id/btn_login_submit"
        android:layout_width="@dimen/btn_register_submit_width"
        android:layout_height="wrap_content"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:layout_marginTop="70dp"
        android:background="@drawable/btn_register_select"
        android:text="登录"
        android:textColor="@color/colorRegisterTxt"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/edtTxt_login_psw" />

    <TextView
        android:id="@+id/tv_login_register"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginRight="0dp"
        android:text="注册"
        android:textColor="@color/colorRegisterTxt"
        app:layout_constraintRight_toRightOf="@+id/edtTxt_login_psw"
        android:layout_marginTop="16dp"
        app:layout_constraintTop_toBottomOf="@+id/edtTxt_login_psw" />

    <ImageView
        android:id="@+id/img_login_phone"
        android:layout_width="@dimen/imgBtn_login_size"
        android:layout_height="@dimen/imgBtn_login_size"
        android:layout_marginBottom="0dp"
        android:layout_marginLeft="5dp"
        android:layout_marginTop="0dp"
        app:layout_constraintBottom_toTopOf="@+id/edtTxt_login_psw"
        app:layout_constraintLeft_toLeftOf="@+id/edtTxt_login_phone"
        app:layout_constraintTop_toTopOf="@+id/edtTxt_login_phone"
        android:src="@drawable/account"/>

    <ImageView
        android:id="@+id/img_login_psw"
        android:layout_width="@dimen/imgBtn_login_size"
        android:layout_height="@dimen/imgBtn_login_size"
        android:layout_marginBottom="0dp"
        android:layout_marginLeft="5dp"
        android:layout_marginTop="0dp"
        app:layout_constraintBottom_toBottomOf="@+id/edtTxt_login_psw"
        app:layout_constraintLeft_toLeftOf="@+id/edtTxt_login_psw"
        app:layout_constraintTop_toTopOf="@+id/edtTxt_login_psw"
        android:src="@drawable/pw"/>

    <ImageView
        android:id="@+id/img_login_delete_phone"
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:layout_marginBottom="0dp"
        android:layout_marginRight="10dp"
        android:layout_marginTop="0dp"
        android:visibility="gone"
        app:layout_constraintBottom_toTopOf="@+id/edtTxt_login_psw"
        app:layout_constraintRight_toRightOf="@+id/edtTxt_login_phone"
        app:layout_constraintTop_toTopOf="@+id/edtTxt_login_phone"
        android:src="@drawable/close" />

    <ImageView
        android:id="@+id/img_login_psw_look"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_marginBottom="0dp"
        android:layout_marginRight="5dp"
        android:layout_marginTop="0dp"
        app:layout_constraintBottom_toBottomOf="@+id/edtTxt_login_psw"
        app:layout_constraintRight_toRightOf="@+id/edtTxt_login_psw"
        app:layout_constraintTop_toTopOf="@+id/edtTxt_login_psw"
        android:src="@drawable/hide" />

    <ImageView
        android:id="@+id/img_login_delete_psw"
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:layout_marginBottom="0dp"
        android:layout_marginRight="3dp"
        android:layout_marginTop="0dp"
        android:visibility="gone"
        app:layout_constraintBottom_toBottomOf="@+id/edtTxt_login_psw"
        app:layout_constraintRight_toLeftOf="@+id/img_login_psw_look"
        app:layout_constraintTop_toTopOf="@+id/edtTxt_login_psw"
        android:src="@drawable/close" />

</android.support.constraint.ConstraintLayout>
